---
import Breadcrumbs from '@blocks/Breadcrumbs.astro'
import PageHeading from '@blocks/PageHeading.astro'
import Communication from '@blocks/Communication.astro'
import Layout from '@layout/Layout.astro'
import Map from '@blocks/Map.astro'
import AddressCards from '@blocks/AddressCards.astro'
---

<Layout
  seo={{
    title: 'Частокол: Контакты',
    description: 'Металлические заборы в Санкт-Петербурге',
    cover: '/images/seo/home.jpg',
  }}
  headerColor={'dark'}
  headerMobileColor={'dark'}
>
  <Breadcrumbs
    links={[
      { name: 'Главная', href: '/' },
      { name: 'Контакты', href: '/contacts' },
    ]}
  />

  <PageHeading
    heading="Контакты"
    paddingBottom={'full'}
  />

  <Communication border />

  <Map
    paddingTop={'full'}
    paddingBottom={'normal'}
  />

  <AddressCards />
</Layout>
