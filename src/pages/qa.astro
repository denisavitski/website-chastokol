---
import Breadcrumbs from '@blocks/Breadcrumbs.astro'
import Connect from '@blocks/Connect.astro'
import PageHeading from '@blocks/PageHeading.astro'
import QA2 from '@blocks/QA2.astro'
import Layout from '@layout/Layout.astro'
---

<Layout
  seo={{
    title: 'Частокол: Политика конфиденциальности',
    description: 'Металлические заборы в Санкт-Петербурге',
    cover: '/images/seo/home.jpg',
  }}
  headerColor={'dark'}
  headerMobileColor={'dark'}
>
  <Breadcrumbs
    links={[
      { name: 'Главная', href: '/' },
      { name: 'Вопросы и ответы', href: '/qa' },
    ]}
  />

  <PageHeading heading="Вопросы и ответы" />

  <QA2 />

  <Connect
    theme={'questions'}
    heading="Остались вопросы?"
    description="Напишите в любом удобном мессенджере, прораб нашей компании ответит вам в течение 2-ух минут."
    member={{
      image: { src: '/images/company-members/foreman.jpg' },
      name: 'Петр Иванов',
      position: 'Прораб в компании «Частокол»',
    }}
    districts={false}
  />
</Layout>
