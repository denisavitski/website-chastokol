---
import Advice from '@blocks/Advice.astro'
import ArticleIntro from '@blocks/ArticleIntro.astro'
import ArticleStories from '@blocks/ArticleStories.astro'
import ArticleSuggestions from '@blocks/ArticleSuggestions.astro'
import Breadcrumbs from '@blocks/Breadcrumbs.astro'
import Layout from '@layout/Layout.astro'
---

<Layout
  seo={{
    title: 'Частокол: Статья',
    description: 'Металлические заборы в Санкт-Петербурге',
    cover: '/images/seo/home.jpg',
  }}
  headerColor={'dark'}
  headerMobileColor={'dark'}
>
  <Breadcrumbs
    links={[
      { name: 'Главная', href: '/' },
      { name: 'Блог', href: '/blog' },
      { name: 'Статья', href: '/blog/article' },
    ]}
    whiteBackground
    largePadding
  />
  <ArticleIntro />
  <Advice
    size={'small'}
    label={false}
    heading={'Идеи для вашего забора ищите&nbsp;в&nbsp;нашей галерее'}
    description="Будьте в курсе всех обновлений. Специальные предложения, эксклюзивные материалы и полезные советы — все это в нашей группе ВКонтакте."
    button={'В галерею'}
  />
  <ArticleStories />
  <ArticleSuggestions />
</Layout>
