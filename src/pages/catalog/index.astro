---
import Breadcrumbs from '@blocks/Breadcrumbs.astro'
import CatalogCardsSection from '@blocks/CatalogCardsSection.astro'
import Connect from '@blocks/Connect.astro'
import TextIntro from '@blocks/TextIntro.astro'
import Layout from '@layout/Layout.astro'
---

<Layout
  seo={{
    title: 'Частокол: Каталог',
    description: 'Металлические заборы в Санкт-Петербурге',
    cover: '/images/seo/home.jpg',
  }}
  headerColor={'dark'}
  headerMobileColor={'dark'}
>
  <Breadcrumbs
    links={[
      { name: 'Главная', href: '/' },
      { name: 'Каталог', href: '/catalog' },
    ]}
  />
  <TextIntro
    heading="Каталог конструкций"
    description="Более 50 категорий конструкций под любые цели."
  />

  <CatalogCardsSection
    heading={'Заборы'}
    headingLevel="h3"
    paddingTop={'full'}
    whiteBackground
    cards={[
      {
        href: '/',
        name: 'Металлические заборы',
        image: { src: '/images/catalog-item.png' },
      },
      {
        href: '/',
        name: 'Деревянные заборы',
        image: { src: '/images/catalog-item.png' },
