      },
      {
        href: '/',
        name: 'Кованные заборы',
        image: { src: '/images/catalog-item.png' },
      },
    ]}
  />

  <CatalogCardsSection
    heading={'Ворота'}
    headingLevel="h3"
    whiteBackground
    cards={[
      {
        href: '/',
        name: 'Откатные ворота',
        image: { src: '/images/catalog-item.png' },
      },
      {
        href: '/',
        name: 'Распашные ворота',
        image: { src: '/images/catalog-item.png' },
      },
      {
        href: '/',
