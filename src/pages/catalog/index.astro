      },
      {
        href: '/',
        name: 'Подъемные ворота',
        image: { src: '/images/catalog-item.png' },
      },
    ]}
  />

  <CatalogCardsSection
    heading={'Калитки'}
    headingLevel="h3"
    paddingBottom={'full'}
    whiteBackground
    cards={[
      {
        href: '/',
        name: 'Кованые калитки',
        image: { src: '/images/catalog-item.png' },
      },
      {
        href: '/',
        name: 'Деревянные калитки',
        image: { src: '/images/catalog-item.png' },
