---
import Icon from './Icon.astro'
import type { ImageDataProps } from './Image.astro'

export interface Props {
  class?: string
  image?: ImageDataProps
  title?: string
  online?: string
  href?: string
}

const {
  class: className,
  image = { src: '/images/manager.jpg' },
  title = 'Написать в WhatsApp',
  online = 'менеджер online',
  href = 'https://google.com',
  ...rest
} = Astro.props
---

<a
  {...rest}
  {href}
  target={'_blank'}
  class:list={[className, 'manager']}
>
  <img
    {...image}
    class="manager__image"
    decoding="async"
    loading="lazy"
  />

  <span class="manager__content">
    <span class="manager__title f-d-body-large-medium-16">
      <Icon
        name={'wa'}
        class="manager__title__icon"
      />
      <span
        class="manager__title__value"
        set:html={title}
      />
    </span>
    <span
      class="manager__online f-d-body-basic-regular-14"
      set:html={online}
    />
  </span>
</a>

<style is:global>
  .manager {
    @media (min-width: 769px) {
      display: flex;
      align-items: center;
      gap: 2rem;
    }
  }

  .manager__image {
    width: 3.8rem;
    height: 3.8rem;

    border-radius: 50%;
    object-fit: cover;

    @media (max-width: 768px) {
      display: none;
    }
  }

  .manager__content {
    @media (max-width: 768px) {
      width: 100%;
      display: flex;
      flex-direction: column;
      align-items: center;
    }
  }

  .manager__title {
    display: block;
    margin-bottom: 0.3rem;

    @media (min-width: 769px) {
      @media (hover: hover) {
        transition-property: color;
        transition-duration: var(--duration-button);

        .manager:hover & {
          color: var(--color-primary-0);
        }
      }
    }

    @media (max-width: 768px) {
      width: 100%;
      height: 4rem;
      margin-bottom: 1.5rem;

      display: flex;
      align-items: center;
      justify-content: center;

      border-radius: 3rem;
      background-color: #17c056;
      color: var(--color-grayscale-0);
    }
  }

  .manager__title__icon {
    @media (min-width: 769px) {
      display: none;
    }

    @media (max-width: 768px) {
      width: 1.8rem;
      height: 1.8rem;
      margin-right: 1rem;
      fill: var(--color-grayscale-0);
    }
  }

  .manager__online {
    display: inline-flex;
    align-items: center;
    gap: 1rem;

    color: var(--color-grayscale-400);

    &::before {
      content: '';

      width: 0.7rem;
      height: 0.7rem;

      background-color: var(--color-primary-0);
      border-radius: 50%;
    }
  }
</style>
