---
import Icon from './Icon.astro'

export interface Props {
  class?: string
}

const { class: className, ...rest } = Astro.props
---

<a
  {...rest}
  class:list={[className, 'vkontakte-link']}
  href="https://google.com"
  target="_blank"
>
  <Icon
    name={'vk2'}
    class="vkontakte-link__icon"
  />
  <span
    class="vkontakte-link__name f-d-body-large-medium-16 f-m-body-basic-medium-14"
    >Перейти в группу</span
  >
</a>

<style is:global>
  .vkontakte-link {
    display: inline-flex;
    align-items: center;
    gap: 1rem;

    height: 4.5rem;
    padding: 0rem 2rem 0rem 1.5rem;

    border-radius: 3rem;

    background-color: #0077ff;

    @media (hover: hover) {
      transition-property: opacity;
      transition-duration: var(--duration-button);

      &:hover {
        opacity: 0.8;
      }
    }

    @media (max-width: 768px) {
      gap: 0.9rem;
      height: 4rem;
      padding: 0rem 2rem 0rem 1rem;
    }
  }

  .vkontakte-link__icon {
    width: 2.6rem;
    height: 2.6rem;

    fill: var(--color-grayscale-0);

    @media (max-width: 768px) {
      width: 2.3rem;
      height: 2.3rem;
    }
  }

  .vkontakte-link__name {
    color: var(--color-grayscale-0);
  }
</style>
