---
import CatalogCard, {
  type Props as CatalogCardProps,
} from './CatalogCard.astro'

export interface Props
  extends Pick<
    CatalogCardProps,
    'description' | 'price' | 'name' | 'href' | 'image'
  > {
  class?: string
}

const { class: className, ...rest } = Astro.props
---

<CatalogCard
  {...rest}
  class:list={[className, 'variant-card']}
  button={'more'}
/>

<style is:global>
  .variant-card {
    --catalog-card-width: 46.7rem;
    --catalog-card-image-height: 32.7rem;

    @media (max-width: 768px) {
      --catalog-card-width: 26rem;
      --catalog-card-image-height: 20rem;
    }
  }
</style>
