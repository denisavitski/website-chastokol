---
import type { SpriteIconName } from '@utils/SpriteIconName'
import type { HTMLAttributes } from 'astro/types'

export interface Props extends HTMLAttributes<'svg'> {
  name: SpriteIconName
}

const { name, ...rest } = Astro.props
---

<svg
  {...rest}
  data-name={name}
>
  <use xlink:href={`/sprite.svg#sprite:${name}`}></use>
</svg>
