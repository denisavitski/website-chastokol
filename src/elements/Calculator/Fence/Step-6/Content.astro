---
import CalculatorStep from '@elements/Calculator/CalculatorStep.astro'
import CalculatorInput from '@elements/CalculatorInput.astro'
import CalculatorInputs from '@elements/CalculatorInputs.astro'
---

<CalculatorStep
  type={'content'}
  name="Выберите основу забора"
>
  <CalculatorInputs>
    <CalculatorInput
      label="Фундамент"
      placeholder="Укажите тип фундамента"
      name="fence-foundation"
      required
    />
    <CalculatorInput
      info="fence-basement-part"
      label="Цокольная часть"
      placeholder="Укажите требуется ли цокольная часть"
      name="fence-basement-part"
      required
      tag="select"
      value="Требуется"
      options={['Требуется', 'Не требуется']}
    />
    <CalculatorInput
      info="fence-strengthening"
      label="Усиление столбов"
      placeholder="Укажите требуется ли усиление столбов"
      name="fence-strengthening"
      required
      tag="select"
      value="Требуется"
      options={['Требуется', 'Не требуется']}
    />
    <CalculatorInput
      info="fence-support-pillars"
      label="Опорные стобы"
      placeholder="Укажите требуются ли опорные столбы"
      name="fence-support-pillars"
      required
      tag="select"
      value="Требуется"
      options={['Требуются', 'Не требуются']}
    />
  </CalculatorInputs>
</CalculatorStep>
