---
import type { HTMLAttributes } from 'astro/types'
import Calculator from '../Calculator.astro'

import StepTypeContent from './Step-Type/Content.astro'
import StepTypeInfo from './Step-Type/Info.astro'

import StepMaterialContent from './Step-Material/Content.astro'
import StepMaterialInfo from './Step-Material/Info.astro'

import StepBaseContent from './Step-Base/Content.astro'
import StepBaseInfo from './Step-Base/Info.astro'

import StepColorContent from './Step-Color/Content.astro'
import StepColorInfo from './Step-Color/Info.astro'

import StepServicesContent from './Step-Services/Content.astro'
import StepServicesInfo from './Step-Services/Info.astro'

import StepGatesContent from './Step-Gates/Content.astro'
import StepGatesInfo from './Step-Gates/Info.astro'

import StepParametersContent from './Step-Parameters/Content.astro'
import StepParametersInfo from './Step-Parameters/Info.astro'

import StepContactsContent from './Step-Contacts/Content.astro'
import StepContactsInfo from './Step-Contacts/Info.astro'

export interface Props extends HTMLAttributes<any> {
  class?: string
}
---

<Calculator
  {...Astro.props}
  steps={8}
>
  <StepTypeContent slot="step-content" />
  <StepTypeInfo slot="step-info" />

  <StepMaterialContent slot="step-content" />
  <StepMaterialInfo slot="step-info" />

  <StepBaseContent slot="step-content" />
  <StepBaseInfo slot="step-info" />

  <StepColorContent slot="step-content" />
  <StepColorInfo slot="step-info" />

  <StepServicesContent slot="step-content" />
  <StepServicesInfo slot="step-info" />

  <StepGatesContent slot="step-content" />
  <StepGatesInfo slot="step-info" />

  <StepParametersContent slot="step-content" />
  <StepParametersInfo slot="step-info" />

  <StepContactsContent slot="step-content" />
  <StepContactsInfo slot="step-info" />
</Calculator>
