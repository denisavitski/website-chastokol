---
import CalculatorStep from '@elements/Calculator/CalculatorStep.astro'
import CalculatorInput from '@elements/CalculatorInput.astro'
import CalculatorInputs from '@elements/CalculatorInputs.astro'
---

<CalculatorStep
  type={'content'}
  name="Ворота и калитки"
>
  <CalculatorInputs>
    <CalculatorInput
      label="Кол-во ворот"
      placeholder="Укажите количество ворот"
      name="fence-gates-amount"
      required
    />

    <CalculatorInput
      info="fence-gates-type"
      label="Тип ворот"
      placeholder="Укажите тип ворот"
      name="fence-gates-type"
      required
      tag="select"
      value="Откатные"
      options={['Откатные', 'Распашные']}
    />

    <CalculatorInput
      label="Кол-во калиток"
      placeholder="Укажите количество калиток"
      name="fence-wickets-amount"
      required
    />

    <CalculatorInput
      info="fence-wickets-type"
      label="Тип калиток"
      placeholder="Укажите тип калиток"
      name="fence-wickets-type"
      required
      tag="select"
      value="Глухая"
      options={['Глухая', 'Не глухая']}
    />
  </CalculatorInputs>
</CalculatorStep>
