---
import CalculatorStep from '@elements/Calculator/CalculatorStep.astro'
import CalculatorInputs from '@elements/CalculatorInputs.astro'
import Input from '@elements/Input.astro'
---

<CalculatorStep
  type={'content'}
  name="Заполните параметры"
>
  <CalculatorInputs>
    <Input
      label="Длина забора, м."
      placeholder="Укажите длину забора"
      name="fence-length"
      required
      theme={'lightgrey'}
    />
    <Input
      label="Высота забора, м."
      placeholder="Укажите высоту забора"
      name="fence-height"
      required
      theme={'lightgrey'}
    />
    <Input
      info="fence-pillars"
      label="Столбы"
      placeholder="Укажите тип столбов"
      name="fence-pillars"
      required
      type="select"
      value="Квадратный профиль"
      options={['Квадратный профиль', 'Треугольный профиль']}
      theme={'lightgrey'}
    />
    <Input
      info="fence-logs"
      label="Лаги"
      placeholder="Укажите требуются ли лаги"
      name="fence-logs"
      required
      type="select"
      value="Квадратный профиль"
      options={['Требуются', 'Не требуются']}
      theme={'lightgrey'}
    />
    <Input
      info="fence-depth"
      label="Заглубление, м."
      placeholder="Укажите заглубление"
      name="fence-depth"
      required
      type="select"
      value="0,5"
      options={['0,5', '1', '2']}
      theme={'lightgrey'}
    />
  </CalculatorInputs>
</CalculatorStep>
