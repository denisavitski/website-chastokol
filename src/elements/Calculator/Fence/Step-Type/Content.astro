---
import CalculatorStep from '@elements/Calculator/CalculatorStep.astro'
import RadioCards, {
  type Props as RadioCardsProps,
} from '@elements/RadioCards.astro'

export interface Props extends RadioCardsProps {}

const {
  cards = [
    {
      image: { src: '/images/catalog-item.png' },
      value: 'Профнастил',
      required: true,
    },
    {
      image: { src: '/images/catalog-item.png' },
      value: 'Евроштакетник',
      required: true,
    },
    {
      image: { src: '/images/catalog-item.png' },
      value: '3D сетка Гиттер',
      required: true,
    },
    {
      image: { src: '/images/catalog-item.png' },
      value: '2D сварная сетка',
      required: true,
    },
    {
      image: { src: '/images/catalog-item.png' },
      value: 'Деревянный шаткетник',
      required: true,
    },
    {
      image: { src: '/images/catalog-item.png' },
      value: 'Сетка рабица',
      required: true,
    },
    {
      image: { src: '/images/catalog-item.png' },
      value: 'Поликарбонат',
      required: true,
    },
    {
      image: { src: '/images/catalog-item.png' },
      value: 'Жалюзи',
      required: true,
    },
  ],
  name = 'fence-type',
} = Astro.props
---

<CalculatorStep
  type={'content'}
  name="Выберите тип забора"
>
  <RadioCards
    {cards}
    {name}
  />
</CalculatorStep>
