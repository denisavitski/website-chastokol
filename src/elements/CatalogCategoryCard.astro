---
import type { ImageDataProps } from './Image.astro'
import CatalogCard, {
  type Props as CatalogCardProps,
} from './CatalogCard.astro'

export interface Props extends CatalogCardProps {
  class?: string
  href?: string
  name?: string
  price?: string
  image?: ImageDataProps
}

const { class: className, ...rest } = Astro.props
---

<CatalogCard
  {...rest}
  button={false}
  border
  class={`catalog-category-card ${className || ''}`}
/>

<style is:global>
  .catalog-category-card {
    --catalog-card-width: 46.7rem;
    --catalog-card-image-height: 32.7rem;

    @media (max-width: 768px) {
      --catalog-card-width: 26rem;
      --catalog-card-image-height: 20rem;
    }
  }
</style>
