---
import Icon from './Icon.astro'

export interface Props {
  class?: string
}

const { class: className, ...rest } = Astro.props
---

<a
  {...rest}
  href="/"
  class:list={[className, 'logo']}
>
  <Icon
    name={'logotype'}
    class="logo__image"
  />
</a>

<style is:global>
  .logo {
    display: block;
    width: 18.5rem;
    height: 3.1rem;

    @media (max-width: 768px) {
      width: 15.2rem;
      height: 2.6rem;
    }
  }

  .logo__image {
    width: 100%;
    height: 100%;
    fill: var(--logo-color, var(--color-grayscale-0));
  }
</style>
