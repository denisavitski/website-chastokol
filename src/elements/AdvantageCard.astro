---
import type { SpriteIconName } from '@utils/SpriteIconName'
import Icon from './Icon.astro'

export interface Props {
  class?: string
  title?: string
  description?: string
  icon?: SpriteIconName
}

const {
  class: className,
  title = 'Быстро',
  description = 'Собственное производство и&nbsp;партнерские отношения с&nbsp;поставщиками гарантируют быструю поставку сырья точно в&nbsp;срок.',
  icon = 'bolt',
  ...rest
} = Astro.props
---

<div
  {...rest}
  class:list={[className, 'advantage-card']}
>
  <div class="advantage-card__icon-box">
    <Icon
      name={icon}
      class="advantage-card__icon"
    />
  </div>
  <div
    class="advantage-card__title f-d-title-medium-24 f-m-body-large-medium-16"
    set:html={title}
  />
  <div
    class="advantage-card__description f-d-body-large-regular-16 f-m-body-basic-regular-14"
    set:html={description}
  />
</div>

<style is:global>
  .advantage-card {
    width: 46.7rem;
    padding: 3rem;

    background-color: var(--color-grayscale-0);
    border-radius: var(--border-radius);

    @media (max-width: 768px) {
      width: 100%;
      padding: 2rem;
    }
  }

  .advantage-card__icon-box {
    display: inline-flex;
    align-items: center;
    justify-content: center;

    width: 5rem;
    height: 5rem;

    margin-bottom: 8rem;

    background-color: var(--color-primary-100);
    border-radius: 1rem;

    @media (max-width: 768px) {
      width: 3rem;
      height: 3rem;

      margin-bottom: 3rem;

      border-radius: 0.7rem;
    }
  }

  .advantage-card__icon {
    width: 2.4rem;
    height: 2.4rem;

    fill: var(--color-grayscale-0);

    @media (max-width: 768px) {
      width: 1.4rem;
      height: 1.4rem;
    }
  }

  .advantage-card__title {
    margin-bottom: 2rem;

    @media (max-width: 768px) {
      margin-bottom: 1.5rem;
    }
  }

  .advantage-card__description {
    color: var(--color-grayscale-400);

    @media (max-width: 768px) {
      text-wrap: balance;
    }
  }
</style>
