---
import type { ImageDataProps } from './Image.astro'
import Image from './Image.astro'

export interface Props {
  class?: string
  title?: string
  image?: ImageDataProps
}

const {
  class: className,
  title = '5 способов защитить забор от вредителей',
  image = { src: '/images/catalog-item.png' },
  ...rest
} = Astro.props
---

<div
  {...rest}
  class:list={[className, 'article-small-card']}
>
  <Image
    lazy
    lazyBackground
    cover
    {...image}
    class="article-small-card__image"
  />

  <div
    class="article-small-card__title f-d-body-large-medium-16 f-m-footnote-medium-10"
    set:html={title}
  />
</div>

<style is:global>
  .article-small-card {
    width: 26rem;
    height: 30rem;
    padding: 0.8rem;

    display: flex;
    align-items: center;
    justify-content: center;

    border-radius: 4rem;
    border: 0.2rem solid var(--color-primary-100);

    @media (max-width: 768px) {
      width: 11rem;
      height: 13rem;
      padding: 0.3rem;

      border-radius: 2rem;
    }
  }

  .article-small-card__image {
    width: 100%;
    height: 100%;

    border-radius: 3rem;
    background-color: var(--color-grayscale-300);

    &::after {
      content: '';

      position: absolute;
      width: 100%;
      height: 100%;

      top: 0;
      left: 0;

      background-image: linear-gradient(
        to bottom,
        rgba(0, 0, 0, 0),
        rgba(230, 230, 230, 1)
      );
    }

    @media (max-width: 768px) {
      border-radius: 1.5rem;
    }
  }

  .article-small-card__title {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -moz-box-orient: vertical;
    -webkit-box-orient: vertical;
    overflow: hidden;
    text-overflow: ellipsis;

    position: absolute;
    bottom: 0;
    z-index: 1;

    text-wrap: balance;

    height: 3.8rem;
    margin: 3.3rem;

    @media (max-width: 768px) {
      -webkit-line-clamp: 3;
      height: 3.6rem;
      margin: 1.5rem;
    }
  }
</style>
