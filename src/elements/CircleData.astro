---
import type { SpriteIconName } from '@utils/SpriteIconName'
import Icon from './Icon.astro'

export interface Props {
  class?: string
  icon?: SpriteIconName
  number?: string
  title?: string
  theme?: 'fact' | 'asset'
}

const {
  class: className,
  icon = 'calendar',
  number,
  title = 'Год основания',
  theme = 'fact',
  ...rest
} = Astro.props
---

<div
  {...rest}
  class:list={[className, 'circle-data']}
  data-theme={theme}
>
  <Icon
    name={'border'}
    class={'circle-data__border'}
  />
  <Icon
    name={icon}
    class="circle-data__icon"
  />

  {
    number && (
      <div
        class="circle-data__number"
        set:html={number}
      />
    )
  }

  <div
    class="circle-data__title f-d-body-large-regular-16 f-m-body-basic-regular-14"
    set:html={title}
  />
</div>

<style is:global>
  .circle-data {
    position: relative;

    border-radius: 50%;

    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;

    @media (min-width: 769px) {
      width: 46.7rem;
      height: 46.7rem;

      &[data-theme='asset'] {
        width: 33.7rem;
        height: 33.7rem;
      }
    }

    @media (max-width: 768px) {
      width: 26rem;
      height: 26rem;
    }
  }

  .circle-data__border {
    position: absolute;

    width: 100%;
    height: 100%;

    fill: var(--color-primary-100);
  }

  .circle-data__icon {
    width: 2.4rem;
    height: 2.4rem;

    margin-bottom: 4rem;

    fill: var(--color-primary-100);

    @media (min-width: 769px) {
      .circle-data[data-theme='asset'] & {
        margin-bottom: 1.6rem;

        width: 3rem;
        height: 3rem;
      }
    }

    @media (max-width: 768px) {
      margin-bottom: 2rem;
    }
  }

  .circle-data__number {
    font-family: 'font-additional';
    font-weight: bold;
    line-height: 130%;
    font-size: 8.2rem;

    margin-bottom: 0.5rem;

    color: var(--color-primary-100);

    @media (max-width: 768px) {
      font-size: 4.8rem;
      margin-bottom: 0rem;
    }
  }

  .circle-data__title {
    max-width: 70%;
    text-align: center;
  }
</style>
