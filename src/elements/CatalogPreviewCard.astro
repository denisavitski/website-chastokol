---
import type { ImageDataProps } from './Image.astro'
import CatalogCard, {
  type Props as CatalogCardProps,
} from './CatalogCard.astro'

export interface Props extends CatalogCardProps {
  class?: string
  href?: string
  name?: string
  price?: string
  image?: ImageDataProps
}

const { class: className, ...rest } = Astro.props
---

<CatalogCard
  {...rest}
  button={'top-more'}
  border
  class={`catalog-preview-card ${className || ''}`}
/>

<style is:global>
  .catalog-preview-card {
    --catalog-card-width: 46.7rem;
    --catalog-card-image-height: 46.7rem;

    .catalog-card__price {
      margin-top: 0;
    }

    @media (max-width: 768px) {
      --catalog-card-width: 26rem;
      --catalog-card-image-height: 26rem;
      --arrow-size: 4rem;

      .catalog-card__price {
        margin-top: 0.5rem;
      }
    }
  }
</style>
