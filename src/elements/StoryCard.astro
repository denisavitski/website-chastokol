---
import type { ImageDataProps } from './Image.astro'
import Image from './Image.astro'

export interface Props {
  class?: string
  title?: string
  image?: ImageDataProps
  media?: string
  visited?: boolean
}

const {
  class: className,
  title = '5 способов защитить забор от вредителей',
  image = { src: '/images/catalog-item.png' },
  media = '/videos/1.mp4',
  visited,
  ...rest
} = Astro.props
---

<e-popover-button
  {...rest}
  class:list={[className, 'story-card', { visited }]}
  target={'story'}
  data-media={media}
>
  <Image
    lazy
    lazyBackground
    cover
    {...image}
    class="story-card__image"
  />

  <span
    class="story-card__title f-d-body-large-medium-16 f-m-footnote-medium-10"
    set:html={title}
  />
</e-popover-button>

<style is:global>
  .story-card {
    width: 26rem;
    height: 30rem;
    padding: 0.8rem;

    display: flex;
    align-items: center;
    justify-content: center;

    border-radius: 4rem;

    border: 0.2rem solid var(--color-primary-100);

    &.visited {
      border-color: var(--color-grayscale-300);
    }

    @media (max-width: 1600px) {
      width: 26rem;
      height: 26rem;
    }

    @media (max-width: 768px) {
      width: 11rem;
      height: 13rem;
      padding: 0.3rem;

      border-radius: 2rem;
    }
  }

  .story-card__image {
    width: 100%;
    height: 100%;

    border-radius: 3rem;
    background-color: var(--color-grayscale-300);

    &::after {
      content: '';

      position: absolute;
      width: 100%;
      height: 100%;

      top: 0;
      left: 0;

      background-image: linear-gradient(
        to bottom,
        rgba(0, 0, 0, 0),
        rgba(230, 230, 230, 1)
      );
    }

    @media (max-width: 768px) {
      border-radius: 1.5rem;
    }
  }

  .story-card__title {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -moz-box-orient: vertical;
    -webkit-box-orient: vertical;
    overflow: hidden;
    text-overflow: ellipsis;

    position: absolute;
    bottom: 0;
    z-index: 1;

    text-wrap: balance;

    height: 3.8rem;
    margin: 3.3rem;

    .visited & {
      opacity: 0.3;
    }

    @media (max-width: 768px) {
      -webkit-line-clamp: 3;
      height: 3.6rem;
      margin: 1.5rem;
    }
  }
</style>
