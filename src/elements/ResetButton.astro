---
import type { HTMLAttributes } from 'astro/types'
import IconBox from './IconBox.astro'

export interface Props extends HTMLAttributes<'button'> {
  class?: string
}

const { class: className, ...rest } = Astro.props
---

<button
  {...rest}
  class:list={[className, 'reset-button']}
  type="reset"
>
  <IconBox
    icon={'plus'}
    class="reset-button__icon"
  />
</button>

<style is:global>
  .reset-button {
    @media (hover: hover) {
      &:hover {
        --icon-box-background-color: var(--color-primary-100);
        --icon-box-color: var(--color-grayscale-0);
        --icon-box-border-color: transparent;
      }
    }
  }

  .reset-button__icon {
    --icon-box-size: var(--input-height);
    --icon-size: 1.6rem;
    --icon-box-rotation: 45deg;
    --icon-box-border-color: var(--color-grayscale-300);
  }
</style>
