---
import type { HTMLAttributes } from 'astro/types'
import IconBox from './IconBox.astro'

export interface Props extends HTMLAttributes<'button'> {
  class?: string
}

const { class: className, ...rest } = Astro.props
---

<button
  {...rest}
  class:list={[className, 'reset-button']}
  type="reset"
>
  <IconBox
    icon={'plus'}
    class="reset-button__icon"
  />
</button>

<style is:global>
  .reset-button {
    @media (hover: hover) {
      transition-property: opacity;
      transition-duration: var(--duration-button);
      transition-timing-function: ease;

      &:hover {
        opacity: 0.8;
      }
    }
  }

  .reset-button__icon {
    --icon-box-size: var(--input-height);
    --icon-size: 1.6rem;
    --icon-box-rotation: 45deg;
    --icon-box-border-color: var(--color-grayscale-300);
  }
</style>
