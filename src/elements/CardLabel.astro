---
import type { SpriteIconName } from '@utils/SpriteIconName'
import Icon from './Icon.astro'

export interface Props {
  class?: string
  name?: string
  icon?: SpriteIconName | false
}

const { class: className, name = 'label', icon, ...rest } = Astro.props
---

<div
  {...rest}
  class:list={[
    className,
    'card-label f-d-body-large-medium-16 f-m-footnote-medium-12',
  ]}
>
  {
    icon && (
      <Icon
        class="card-label__icon"
        name={'tools'}
      />
    )
  }

  <div
    class="card-label__name"
    set:html={name}
  />
</div>

<style is:global>
  .card-label {
    padding: 0.95rem 1.5rem;

    display: inline-flex;
    align-items: center;
    gap: 1rem;

    border-radius: 0.7rem;
    background-color: var(--color-grayscale-0);
    color: var(--color-primary-100);

    @media (max-width: 768px) {
      padding: 0.5rem 1rem;

      gap: 0.6rem;
    }
  }

  .card-label__icon {
    width: 1.4rem;
    height: 1.4rem;

    fill: var(--color-primary-100);
  }

  .card-label__name {
  }
</style>
