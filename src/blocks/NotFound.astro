---
import Button from '@elements/Button.astro'

export interface Props {
  class?: string
  code?: string
  title?: string
  description?: string
  button?: string
}

const {
  class: className,
  code = '404',
  title = 'Страница не найдена',
  description = 'Вы ввели адрес несуществующей страницы. Возможно мы удалили ее за ненадобностью или этот продукт временно приостановлен. Вернитесь на главную страницу',
  button = 'Вернуться на главную',
  ...rest
} = Astro.props
---

<div
  {...rest}
  class:list={[className, 'not-found']}
  data-white-background="true"
>
  <div class="not-found__inner">
    <div
      class="not-found__code"
      set:html={code}
    />
    <div
      class="not-found__title f-d-title-medium-76 f-m-title-medium-28"
      set:html={title}
    />
    <div
      class="not-found__description f-d-body-large-regular-16 f-m-body-basic-regular-14"
      set:html={description}
    />
    <Button
      name={button}
      href="/"
      theme={'only-text'}
    />
  </div>
</div>

<style is:global>
  .not-found {
    width: 100%;

    padding-bottom: 14rem;
    padding-top: 5.5rem;

    display: flex;
    justify-content: center;

    color: var(--color-primary-100);

    @media (max-width: 768px) {
      padding: 0 var(--screen-horisontal-padding);
      padding-bottom: 10rem;
      padding-top: 6.3rem;
    }
  }

  .not-found__inner {
    width: 84.1rem;

    display: flex;
    flex-direction: column;
    align-items: center;

    @media (max-width: 768px) {
      width: 100%;
    }
  }

  .not-found__code {
    font-family: 'font-additional';
    font-weight: 700;
    font-size: 32rem;
    text-transform: uppercase;

    @media (max-width: 768px) {
      font-size: 12.8rem;
      margin-bottom: 0rem;
    }
  }

  .not-found__title {
    margin-bottom: 2rem;

    text-align: center;
  }

  .not-found__description {
    width: 68rem;

    margin-bottom: 8rem;

    text-align: center;
    color: var(--color-grayscale-400);

    @media (max-width: 768px) {
      width: 100%;
      margin-bottom: 4rem;
    }
  }
</style>
