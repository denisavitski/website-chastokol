---
export interface Props {
  class?: string
  heading?: string
  headingLevel?: 'h2' | 'h3'
  paddingTop?: 'full' | 'normal'
  paddingBottom?: 'full' | 'normal'
  paddingHorisontal?: 'large' | 'normal'
  whiteBackground?: boolean | undefined
  border?: boolean | undefined
  headingFont?: string
}

const {
  class: className,
  heading = 'Ворота',
  headingLevel = 'h2',
  paddingTop,
  paddingBottom = 'full',
  paddingHorisontal = 'normal',
  whiteBackground,
  headingFont = 'f-d-title-medium-76 f-m-title-medium-30',
  border,
  ...rest
} = Astro.props
---

<!-- BLOCK -->
<h1
  {...rest}
  class:list={[className, 'page-heading', headingFont]}
  data-padding-top={paddingTop}
  data-padding-bottom={paddingBottom}
  data-padding-horisontal={paddingHorisontal}
  data-white-background={whiteBackground}
  data-border={border}
  set:html={heading}
/>
