---
export interface Props {
  class?: string
  heading?: string
  headingLevel?: 'h2' | 'h3'
  paddingTop?: 'full' | 'normal'
  paddingBottom?: 'full' | 'normal'
  paddingHorisontal?: 'large' | 'normal'
  whiteBackground?: boolean | undefined
  border?: boolean | undefined
}

const {
  class: className,
  heading = 'Ворота',
  headingLevel = 'h2',
  paddingTop = 'normal',
  paddingBottom = 'normal',
  paddingHorisontal = 'normal',
  whiteBackground,
  border,
  ...rest
} = Astro.props

const HeadingTag = headingLevel
---

<!-- BLOCK -->
<section
  {...rest}
  class:list={[className, 'section']}
  data-padding-top={paddingTop}
  data-padding-bottom={paddingBottom}
  data-padding-horisontal={paddingHorisontal}
  data-white-background={whiteBackground}
  data-border={border}
>
  <HeadingTag
    class:list={[
      'section__heading',
      {
        'f-d-title-medium-42 f-m-title-medium-24': headingLevel === 'h3',
        'f-d-title-medium-56 f-m-title-medium-24': headingLevel === 'h2',
      },
    ]}
    set:html={heading}
  />

  <div class="section__content">
    <slot />
  </div>
</section>

<style is:global>
  .section__heading {
    margin-bottom: 8rem;

    @media (max-width: 768px) {
      margin-bottom: 4rem;
    }
  }
</style>
