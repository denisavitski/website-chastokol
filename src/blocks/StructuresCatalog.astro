---
import CatalogPreviewCard, {
  type Props as CatalogPreviewCardProps,
} from '@elements/CatalogPreviewCard.astro'
import CatalogCardsSection from '@elements/CatalogCardsSection.astro'

export interface Props {
  class?: string
  heading?: string
  catalog?: Array<CatalogPreviewCardProps>
}

const {
  class: className,
  heading = 'Каталог конструкций',
  catalog = [
    {
      href: '/',
      name: 'Заборы',
      price: 'от 550 руб. за м2',
      image: { src: '/images/catalog-item.png' },
    },
    {
      href: '/',
      name: 'Заборы',
      price: 'от 550 руб. за м2',
      image: { src: '/images/catalog-item.png' },
    },
    {
      href: '/',
      name: 'Заборы',
      price: 'от 550 руб. за м2',
      image: { src: '/images/catalog-item.png' },
    },
  ],
  ...rest
} = Astro.props
---

<!-- BLOCK -->
<CatalogCardsSection
  {...rest}
  heading="Каталог конструкций"
  whiteBackground
  paddingTop={'full'}
>
  {
    catalog.map((item) => {
      return <CatalogPreviewCard {...item} />
    })
  }
</CatalogCardsSection>
