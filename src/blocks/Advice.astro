---
import Button from '@elements/Button.astro'
import CardLabel from '@elements/CardLabel.astro'
import Image, { type ImageDataProps } from '@elements/Image.astro'
import TwoSides from '@elements/TwoSides.astro'
import { undefined } from 'astro:schema'

export interface Props {
  image?: ImageDataProps
  heading?: string
  description?: string
  href?: string
  label?: boolean
  size?: 'normal' | 'small'
  button?: string
  padding?: boolean
  class?: string
}

const {
  class: className,
  image = { src: '/images/categories/intro.jpg' },
  heading = 'Нормы строительства на&nbsp;земельном участке',
  description = 'Заборы выполняют сразу несколько функций. Они защищают участок, подчеркивают стиль дома и&nbsp;помогают создать уют.',
  href = '/',
  label = true,
  size = 'normal',
  button = 'Читать',
  padding = true,
} = Astro.props
---

<TwoSides
  class={`advice ${className || ''}`}
  data-white-background="true"
  data-padding-top={padding ? 'full' : undefined}
  data-padding-bottom={padding ? 'normal' : undefined}
  data-padding-horisontal={padding
    ? size === 'normal'
      ? 'normal'
      : 'large'
    : undefined}
  data-size={size}
>
  <Image
    lazy
    lazyBackground
    cover
    slot={'left'}
    {...image}
    class="advice__image two-sides__cover"
  />
  <div
    slot="right"
    class="advice__content"
  >
    {
      label && (
        <CardLabel
          name="Советы"
          class="advice__label"
        />
      )
    }

    <h2
      class:list={[
        'advice__heading',
        { 'f-d-title-medium-42 f-m-title-medium-20': size === 'normal' },
        { 'f-d-title-medium-28 f-m-title-medium-20': size === 'small' },
      ]}
      set:html={heading}
    />
    <p
      class="advice__description f-d-body-large-regular-16 f-m-body-basic-regular-14"
      set:html={description}
    />
    <Button
      name={button}
      href={href}
      class="advice__link"
    />
    <Button
      name={button}
      href={href}
      theme={'flat'}
      class="advice__link_mobile"
    />
  </div>
</TwoSides>

<style is:global>
  .advice {
    --right-background: var(--color-grayscale-100);
    --left-background: var(--color-image-background);

    @media (min-width: 769px) {
      .two-sides__left,
      .two-sides__right {
        width: 53.5rem;
      }
    }

    @media (max-width: 768px) {
      --left-height: 23.5rem;
      flex-direction: column-reverse;
    }
  }

  .advice__image {
  }

  .advice__content {
  }

  .advice__label {
    margin-bottom: 4rem;
  }

  .advice__heading {
    margin-bottom: 3rem;

    @media (min-width: 769px) {
      .advice[data-size='small'] & {
        margin-bottom: 2rem;
      }
    }

    @media (max-width: 768px) {
      margin-bottom: 2rem;
    }
  }

  .advice__description {
    margin-bottom: 8rem;

    .advice[data-size='small'] & {
      color: var(--color-grayscale-400);
    }

    @media (min-width: 769px) {
      .advice[data-size='small'] & {
        margin-bottom: 5rem;
      }
    }

    @media (max-width: 768px) {
      margin-bottom: 4rem;
      letter-spacing: -0.11px;
    }
  }

  .advice__link {
    @media (max-width: 768px) {
      display: none;
    }
  }

  .advice__link_mobile {
    @media (min-width: 769px) {
      display: none;
    }
  }
</style>
