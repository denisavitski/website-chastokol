---
import CatalogCardsSection, {
  type Props as CatalogCardsSectionProps,
} from '@elements/CatalogCardsSection.astro'
import CatalogCategoryCard, {
  type Props as CatalogCategoryCardProps,
} from '@elements/CatalogCategoryCard.astro'

export interface Props extends CatalogCardsSectionProps {
  name?: string
  cards?: Array<Pick<CatalogCategoryCardProps, 'href' | 'image' | 'name'>>
}

const {
  name = 'Заборы',
  cards = [
    {
      href: '/',
      name: 'Металлические заборы',
      image: { src: '/images/catalog-item.png' },
    },
  ],
  ...rest
} = Astro.props
---

<!-- BLOCK -->
<CatalogCardsSection
  heading={name}
  headingLevel="h3"
  paddingTop={'normal'}
  whiteBackground
  {...rest}
>
  {
    cards.map((card) => {
      return <CatalogCategoryCard {...card} />
    })
  }
</CatalogCardsSection>
