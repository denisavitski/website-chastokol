---
import CatalogSection, {
  type Props as CatalogSectionProps,
} from '@elements/CatalogSection.astro'
import CatalogCard, {
  type Props as CatalogCardProps,
} from '@elements/CatalogCard.astro'

export interface Props extends CatalogSectionProps {
  name?: string
  cards?: Array<Pick<CatalogCardProps, 'href' | 'image' | 'name'>>
}

const {
  name = 'Заборы',
  cards = [
    {
      href: '/',
      name: 'Металлические заборы',
      image: { src: '/images/catalog-item.png' },
    },
  ],
  ...rest
} = Astro.props
---

<!-- BLOCK -->
<CatalogSection
  heading={name}
  headingLevel="h3"
  paddingTop={'normal'}
  class="catalog-categories"
  {...rest}
>
  {
    cards.map((card) => {
      return (
        <CatalogCard
          {...card}
          tag="a"
          button={false}
          class="catalog-categories__card"
          border
        />
      )
    })
  }
</CatalogSection>

<style>
  .catalog-categories {
  }

  .catalog-categories__card {
    --catalog-card-width: 46.7rem;
    --catalog-card-image-height: 32.7rem;

    @media (max-width: 768px) {
      --catalog-card-width: 26rem;
      --catalog-card-image-height: 20rem;
    }
  }
</style>
