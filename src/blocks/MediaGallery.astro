}

const {
  cards = [
    {
      name: 'Стильный забор в д. Климово',
      description:
        'Работа была разделена на несколько этапов, так&nbsp;как параллельно велась стройка и&nbsp;необходимо было в строго отведённые сроки закончить каждый этап',
      labels: [{ icon: 'tools', name: 'Изготовление' }],
      images: [
        { src: '/images/categories/intro.jpg' },
        { src: '/images/home/background.jpg' },
      ],
    },
    {
      name: 'Стильный забор в д. Климово',
      description:
        'Работа была разделена на несколько этапов, так&nbsp;как параллельно велась стройка и&nbsp;необходимо было в строго отведённые сроки закончить каждый этап',
      labels: [{ icon: 'tools', name: 'Изготовление' }],
      images: [
        { src: '/images/categories/intro.jpg' },
        { src: '/images/home/background.jpg' },
      ],
    },
    {
      name: 'Стильный забор в д. Климово',
      description:
        'Работа была разделена на несколько этапов, так&nbsp;как параллельно велась стройка и&nbsp;необходимо было в строго отведённые сроки закончить каждый этап',
      labels: [{ icon: 'tools', name: 'Изготовление' }],
      images: [
        { src: '/images/categories/intro.jpg' },
        { src: '/images/home/background.jpg' },
      ],
    },
    {
      name: 'Стильный забор в д. Климово',
      description:
        'Работа была разделена на несколько этапов, так&nbsp;как параллельно велась стройка и&nbsp;необходимо было в строго отведённые сроки закончить каждый этап',
