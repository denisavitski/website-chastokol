const {
  cards = [
    {
      title: '5 способов защитить забор от вредителей',
      image: { src: '/images/catalog-item.png' },
      href: '/',
    },
    {
      title: '5 способов защитить забор от вредителей',
      image: { src: '/images/catalog-item.png' },
      href: '/',
