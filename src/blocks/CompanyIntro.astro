---
import Image, { type ImageDataProps } from '@elements/Image.astro'
import Video, { type Props as VideoProps } from '@elements/Video.astro'

export interface Props {
  class?: string
  heading?: string
  description?: string
  image?: ImageDataProps
  video?: VideoProps
  border?: boolean
}

const {
  class: className,
  heading = '«Частокол» – <b>надёжный&nbsp;партнёр</b> в&nbsp;сфере строительства с&nbsp;2007 года',
  description = 'За&nbsp;время своей работы в&nbsp;сфере производства и&nbsp;строительства компания накопила солидный опыт и&nbsp;со&nbsp;100% уверенностью готова заявить, что&nbsp;знаем о&nbsp;заборах&nbsp;все. Клиентам не&nbsp;приходится переплачивать за&nbsp;качество.<br><br>Собственное производство материалов и&nbsp;комплектующих позволяет компании держать уровень цен&nbsp;на&nbsp;заборы и&nbsp;ограждения на&nbsp;приемлемом уровне.',
  image = { src: '/images/categories/intro.jpg' },
  video,
  border,
  ...rest
} = Astro.props
---

<div
  {...rest}
  class:list={[className, 'company-intro']}
  data-padding-horisontal="normal"
  data-padding-bottom="full"
  data-border={border}
>
  <h1
    class="company-intro__heading two-color-heading f-d-title-medium-56 f-m-title-medium-24"
    set:html={heading}
  />
  <p
    class="company-intro__description f-d-body-large-regular-16 f-m-body-basic-regular-14"
    set:html={description}
  />
  {
    video ? (
      <Video class="company-intro__image" />
    ) : (
      <Image
        lazy
        lazyBackground
        cover
        class="company-intro__image"
        {...image}
      />
    )
  }
</div>

<style is:global>
  .company-intro__heading {
    width: 103.3rem;
    margin-bottom: 3rem;

    @media (max-width: 768px) {
      width: 100%;
      margin-bottom: 2rem;
    }
  }

  .company-intro__description {
    width: 103.3rem;
    margin-bottom: 8rem;

    color: var(--color-grayscale-400);

    @media (max-width: 768px) {
      width: 100%;
      margin-bottom: 4rem;
    }
  }

  .company-intro__image {
    width: 100%;
    height: 65rem;

    border-radius: var(--border-radius);

    @media (max-width: 768px) {
      height: 23.5rem;
    }
  }
</style>
