---
import Image, { type ImageDataProps } from '@elements/Image.astro'

export interface Props {
  class?: string
  heading?: string
  description?: string
  image?: ImageDataProps
}

const {
  class: className,
  heading = '«Частокол» – <b>надёжный&nbsp;партнёр</b> в&nbsp;сфере строительства с&nbsp;2007 года',
  description = 'За время своей работы в сфере производства и строительства компания накопила солидный опыт и со 100% уверенностью готова заявить, что знаем о заборах все. Клиентам не приходится переплачивать за качество. Собственное производство материалов и комплектующих позволяет компании держать уровень цен на заборы и ограждения на приемлемом уровне.',
  image = { src: '/images/categories/intro.jpg' },
  ...rest
} = Astro.props
---

<div
  {...rest}
  class:list={[className, 'company-intro']}
  data-padding-horisontal="normal"
  data-padding-bottom="full"
>
  <h1
    class="company-intro__heading two-color-heading f-d-title-medium-56 f-m-title-medium-24"
    set:html={heading}
  />
  <p
    class="company-intro__description f-d-body-large-regular-16 f-m-body-basic-regular-14"
    set:html={description}
  />
  <Image
    lazy
    lazyBackground
    cover
    class="company-intro__image"
    {...image}
  />
</div>

<style is:global>
  .company-intro {
    border-bottom: 0.1rem solid var(--color-grayscale-300);
  }

  .company-intro__heading {
    width: 103.3rem;
    margin-bottom: 3rem;

    @media (max-width: 768px) {
      width: 100%;
      margin-bottom: 2rem;
    }
  }

  .company-intro__description {
    width: 103.3rem;
    margin-bottom: 8rem;

    color: var(--color-grayscale-400);

    @media (max-width: 768px) {
      width: 100%;
      margin-bottom: 4rem;
    }
  }

  .company-intro__image {
    width: 100%;
    height: 65rem;

    border-radius: var(--border-radius);

    @media (max-width: 768px) {
      height: 23.5rem;
    }
  }
</style>
